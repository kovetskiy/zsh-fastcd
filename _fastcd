#compdef fastcd

function _fastcd() {
    local maxdepth=$words[3]
    local directory=$words[2]
    local src=$(eval echo "$directory")

    local dirs=($(
        find $src -maxdepth $maxdepth \( -type d -o -type l \) \
            -not  \( \
                -iwholename '*.git*' -o \
                -iwholename '*.svn*' -o \
                -iwholename '*.hg*' \) \
            -printf '%f\n' \
        | sort | uniq -u
    ))

    _values "fastcd at: $directory" $dirs
}

_fastcd "${@}"
